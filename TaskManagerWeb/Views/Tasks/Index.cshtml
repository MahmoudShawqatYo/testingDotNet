@model List<TaskManagerWeb.Models.Task>

<h1>Task Manager</h1>
<a href="/Tasks/Create">Add New Task</a>
<table border='2'>
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Created At</th>
            <th>Is Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Description</td>
                <td>@task.CreatedAt</td>
                <td>@(task.IsCompleted ? "✔" : "✘")</td>
                <td>
                    <a href="/Tasks/Complete/@task.Id">Complete</a> |
                    <a href="/Tasks/Delete/@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
